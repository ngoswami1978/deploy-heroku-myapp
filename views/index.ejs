<html>

<head>
    <meta charset="UTF-8"/>
    <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
    <title>Wash My Cloth @U-80/7 DLF PHASE-3</title>
    <!-- <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css"
        integrity="sha384-JcKb8q3iqJ61gNV9KGb8thSsNjpSL0n8PARn9HuZOnIxN0hoP+VmmDGMN5t9UJ0Z" crossorigin="anonymous"> -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.0.0/dist/css/bootstrap.min.css"
        integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous"/>
    <link href="https://fonts.googleapis.com/css?family=Lato:100" rel="stylesheet"/>
    <link href="/styles.css" rel="stylesheet"/>
</head>

<body>
    <script src="../client/client.js"></script>
    <h2 style="font-family: 'Courier New'">
        <p class="plogo"></p>
    </h2>
    <section class="container">
        <div class="left-half">
            <article>
                <div class="container">
                    <% for(var i=0; i < errorMsg.length; i++){ %>
                        <spam class="error">
                            <%= errorMsg[i] %>
                        </spam>
                        <% } %>

                            <form action="/addtask" method="POST">
                                <select class="selectpicker" data-style="btn-info" name="selectpicker">
                                    <% var options=[]; %>
                                        <% for(var i=0; i <=11; i++) { %>
                                            <% if (i==0) { %>
                                                <option value='<%= i %>'>
                                                    <%= 'Select Room' %>
                                                </option>
                                                <% } else { %>
                                                    <option value='<%= i %>'>
                                                        <%= 'Room ' + i %>
                                                    </option>
                                                    <% } %>
                                                        <% } %>
                                </select>
                                <input type="text" name="newtask" placeholder="add your name" class="invisible">
                                <button class="invisible"> Add Task </button>

                                <h3 style="font-family: cursive;background-color: aquamarine;font-size:small;">
                                    Book My Schedule </h3>

                                <% for( var i=0; i < task.length; i++){ %>
                                    <li style="font-size:10px;"><input type="checkbox" name="check"
                                            value="<%= task[i] %>" />
                                        <%= task[i] %>
                                    </li>
                                    <% } %>

                                        <button formaction="/bookingtask" type="submit" id="top" class="btn btn-primary"
                                            style="font-weight: bold;">Book My Wash
                                        </button>
                            </form>

                            <h2
                                style="color: rgb(27, 77, 4);font-family: 'Courier New', Courier, monospace;font-weight: bold;font-size:small;;background-color: aquamarine;">
                                My Schedule </h2>

                            <% for(var i=0; i < complete.length; i++){ %>
                                <li style="font-size:10px;"><input type="checkbox" checked>
                                    <%= complete[i] %>
                                </li>
                                <% } %>
                </div>
            </article>
        </div>
        <div class="right-half">
            <article>
                <button formaction="/selectPreviousdate" type="submit" id="top" class="btn btn-info"
                    style="font-size: 10px;width:1px;height: 1px;">
                </button>
                <span id="dt_wash" name="dt_wash" class="datepicker"
                    style="color: rgb(52, 12, 233); font-family:serif;font-size: 10px;width:1px;height: 1px;">&nbsp;
                    <%=dt_datePickerValue %>
                </span>
                <button formaction="/selectNextdate" type="submit" id="top" class="btn btn-info"
                    style="font-size:10px;width:1px;height: 1px;"> </button>

                <h2
                    style="color: rgb(27, 77, 4);font-family: cursive;font-weight: bold;font-size:small;background-color: #28a745;">
                    My subscription </h2>

                <section style="background: linear-gradient(to right, #b92b27, #1565c0)">
                    <div class="card-deck">
                        <% for(var i=0; i < subscriptions.subscription.length; i++){ %>
                            <div class="card bg-success text-white">
                                <!-- <img class="card-img-top" src="..." alt="Card image cap"> -->
                                <div class="card-body">
                                    <h5 class="card-title">Room No. <%= subscriptions.subscription[i].roomno %>
                                    </h5>
                                    <small class="card-text"><br>
                                        <%= subscriptions.subscription[i].datefrom %> <br>
                                            <% if (subscriptions.subscription[i].datefrom !='' ) { %>
                                                <span
                                                    style="color: #b92b27;font-family: Verdana, Geneva, Tahoma, sans-serif;font-size: smaller;">
                                                    Expire-<%= subscriptions.subscription[i].dateto %></span>
                                                <% } else { %>
                                                    <p id="blink_text">
                                                        Not Subscribed
                                                    </p>
                                                    <% } %>
                                    </small>

                                </div>
                                <div class="card-footer">
                                    <small class="ext-success">

                                        <% if (subscriptions.subscription[i].datefrom !='' ) { %>
                                            <% if (convertday(subscriptions.subscription[i].dateto )==0) { %>
                                                Please Subscribe to avail service
                                                <% } else { %>
                                            <%= convertday(subscriptions.subscription[i].dateto)%>
                                                days remaining to expire subscription.
                                            <% } %>
                                        <% } else { %>
                                                Please Subscribe to avail service
                                        <% } %>


                                    </small>
                                </div>
                            </div>
                            <% } %>
                    </div>
                </section>
            </article>
        </div>
    </div>
</body>
<%- include('partials/footer'); -%>
</html>